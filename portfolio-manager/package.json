{
  "name": "portfolio-manager",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "ng serve --proxy-config proxy.conf.json",
    "server": "json-server --watch db.json --port 3000",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "package": "npm run build && electron-packager . --platform=darwin --electron-version=17.1.2 --overwrite",
    "dist": "npm run build && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "concurrently": "^9.2.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "json-server": "^0.17.4",
    "typescript": "~5.6.2"
  },
  "build": {
    "appId": "com.portfolio.manager",
    "productName": "Portfolio Manager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/portfolio-manager/**/*",
      "electron-main.js",
      "preload.js",
      "db.json"
    ],
    "asar": true,
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance"
    },
    "compression": "maximum"
  }
}